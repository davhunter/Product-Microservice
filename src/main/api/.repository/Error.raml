#%RAML 1.0 DataType
type: object
description: Returned in error conditions. All errors shoud be returned using this type, for standardization purposes.

properties: 
  errorCode:
    description: Unique code for this particular error.
    type: integer
    required: true
  message:
    description: Textual description of the error
    type: string
    required: true
    
example:
  errorCode: -1
  message: "Bad Request"